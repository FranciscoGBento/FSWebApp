<div class="signupMain">
  <div class="signupArea">
    <form action="/signup" method="POST">
      <label>
        Username
        <input type="text" name="username" />
      </label>
      <label>
        Email
        <input type="email" name="email" />
      </label>
      <label>
        Password
        <input type="password" name="password" />
      </label>

      <div>
        <button type="submit">Register</button>
      </div>
    </form>

    {{#if errorMessage}}
      {{errorMessage}}
    {{/if}}
  </div>
</div>
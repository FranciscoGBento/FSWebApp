<h2>My profile</h2>

{{#if foundUser}}

  <h2>Welcome {{foundUser.username}}</h2>
  {{#each foundUser.favouriteTeam}}
    <p>Favourite Team: {{this.name}}</p>
    <form action="/profile/deleteTeam/{{_id}}" method="post">
      <button type="submit">Delete Team</button>
    </form>
  {{/each}}
  {{#each foundUser.favouritePilot}}
    <p>Favourite Pilot: {{this.name}}</p>
    <form action="/profile/deletePilot/{{_id}}" method="post">
      <button type="submit">Delete Pilot</button>
    </form>
  {{/each}}
  {{#each foundUser.favouriteLegend}}
    <p>Favourite Legend: {{this.name}}</p>
    <form action="/profile/deleteLegend/{{_id}}" method="post">
      <button type="submit">Delete Legend</button>
    </form>
  {{/each}}

  <form action="/profile/delete-user" method="post">
  <button type="submit">Delete User</button>
  </form>

  <a href="/profile-create">Add your favourites!!!</a>

{{/if}}